<%= render partial: 'shared/nav', locals: {title:'TRANSACTION', symbol:'←', url:
:back}%>

<section class="">
  <p class="text-center mb-2"><%= notice %></p>
  <%= render 'shared/detail', group:@group%> <%
  @group.expenses.order(created_at: :desc).each do |g| %>
  <div class="transact_card">
    
    <ul class="group_card_detail-inner">
      <h4>
        <%= g.name.capitalize %></h3>
      </h4>
      <li>$<%= g.amount %></li>
    </ul>
    <div><%= g.created_at.strftime("%d %b %Y") %></div>
    
  </div>
  <% end %> <%= button_to 'ADD TRANSACTION',
  new_user_group_expense_path(user_id: group.user.id, group_id: group.id),
  method: :get, class: 'category_button fixed-bottom' %>
</section>
